    <p>Choisissez vos articles avant de passer commande </p>
    <hr>
    <div class="row">
        <div class="col-md-6">

            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                {{ form_end(form) }}
            {% endset %}

            {{ formHtml|replace({'[br]': '<br/>)'})|raw }}

        </div>
        <div class="col-md-6">
            <b>Recap de ma commande </b><br>
            {% for product in cart %}
                <div class="row">
                    <div class="col"><img src="/uploads/illustration/photos/{{ product.product.illustration }}" alt=" {{ product.product.name }}" height="90px"></div>
                    <div class="col-8 my-auto">
                        {{ product.product.name }}<br>
                            <smal>{{ product.product.subtitle }}</smal>
                        </td>
                    </div>
                    <div class="col my-auto">    x {{ product.quantity }}</div>
                </div>


            {% endfor %}


        </div>
    </div>


{% endblock %}
